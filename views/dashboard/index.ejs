<div class="container container-fluid pb-5 mb-5">
  <div class="row mb-4">
    <div class="col">
      <h1>Hello, <%= userName%>
      </h1>
    </div>
    <div class="col text-end">
      <a class="btn btn-primary" href="/dashboard/add"> + New Task</a>
    </div>

    <div class="row">
      <% if(tasks.length> 0 ) { tasks.forEach(task =>{ %>
        <div class="col-sm-3 mb-4">
          <div class="card border-primary" style="min-height: 210px;">
            <a href="/dashboard/item/<%= task._id%>" class="card-body text-decoration-none">
              <h5 class="card-title">
                <%= task.title %>
              </h5>
              <p class="card-text">
                <%= task.body %>
              </p>
            </a>
          </div>
        </div>
        <% })} else { %>
          <div class="row">
            <div class="col-3">
              <img class="img-fluid" src="/img/time.jpg" alt="human_img">
            </div>
            <div class="col mt-md-4">
              <h2>Welcome</h2>
              <h4>let's start with your first task!</h4>
              <a href="/dashboard/add">Create One</a>
            </div>
          </div>

          <% } %>
    </div>

    <% if(tasks.length> 0 ){ %>
      <nav aria-label="Page navigation example ">
        <ul class="pagination justify-content-center mt-5">
          <% if( current===1 ){%>
            <li class="page-item"><a class="page-link" href="#">Previous</a></li>
            <% } else {%>
              <li class="page-item"><a class="page-link" href="/dashboard">First</a></li>
              <% }%>


                <% let i=current> 5 ? current - 4 : 1 %>
                  <% if(i !==1) { %>
                    <li class="page-item"><a class="page-link" href="#">....</a></li>
                    <% } %>
                      <% for(; i <=current + 4 && i < pages; i++ ) {%>
                        <% if(i===current) { %>
                          <li class="page-item"><a class="page-link" href="#">
                              <%= i%>
                            </a></li>
                          <% } else { %>
                            <li class="page-item"><a class="page-link" href="/dashboard/?page=<%= i%>">
                                <%= i%>
                              </a></li>
                            <% } %>

                              <% if( i <=current + 4 && i < pages) { %>
                                <li class="page-item"><a class="page-link" href="#">....</a></li>
                                <% } %>

                                  <% } %>

                                    <% if(pages==current){%>
                                      <li class="page-item disabled"><a class="page-link" href="#">Last</a></li>
                                      <% } else {%>
                                        <li class="page-item"><a class="page-link"
                                            href="/dashboard/?page=<%= pages%>">Last</a></li>
                                        <% } %>
        </ul>
      </nav>
      <% } %>
  </div>