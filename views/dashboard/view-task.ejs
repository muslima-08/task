<div class="container container-fluid pb-5 mb-5">
  <div class="row mb-4">
    <div class="col">
      <nav arialabel-="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
          <li class="breadcrumb-item active" aria-current="page">
            <%= task.title%>
          </li>
        </ol>
      </nav>
      <div class="col d-flex justify-content-between align-items-center">
        <h1>view task</h1>
        <button data-bs-toggle="modal" data-bs-target="#exampleModal" class="btn btn-danger">Delete</button>
      </div>
    </div>
  </div>

  <form action="/dashboard/item-update/<%= taskId%>" method="post">
    <div class="form-group mb-4">
      <input type="text" class="form-control fw-bold border-1" placeholder="Title" name="title"
        value="<%= task.title%>">
    </div>
    <div class="form-group mb-4">
      <textarea name="body" cols="30" rows="10" class="form-control pt-5 fs-4"> <%= task.body%></textarea>
    </div>
    <div class="form-group mb-4">
      <button  type="submit" class="btn btn-primary">Update</button>
    </div>
  </form>



  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Warning</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <h4>Do you really want to delete this task?</h4>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <form action="/dashboard/item-delete/<%= taskId%>" method="get">

            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>